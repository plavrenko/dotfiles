# some more ls aliases
OS=`uname -s`

if [ "$OS" == "Darwin" ]
then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# clears a key out of the known_hosts file
function clearkey() {
    ssh-keygen -R $1
    ssh-keygen -R `host $1 | awk '{ print $4 }'`
}

# forget history for this session
alias nvm="export HISTFILE=/dev/null"

# upload publick key
function upload_key() {
    if [ x"$1" == "x" ]; then
        echo "Error: you should provide a hostname"
    else
        cat ~/.ssh/id_rsa.pub | ssh $1 "mkdir -m 700 -p ~/.ssh; cat >> ~/.ssh/authorized_keys"
    fi
}
alias ssh-upload-key="upload_key"
